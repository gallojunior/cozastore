@section Scripts {
	<script>
		var model = @Html.Raw(Json.Serialize(Model));

		function getProduto(id) {
			for (let i = 0; i < model.produtos.length; i++) {
				if (model.produtos[i].id == id) {
					return model.produtos[i];
				}
			}
		}

		function showProduto(id) {
			let produto = getProduto(id);
			document.getElementById('Modal.Nome').innerHTML = produto.nome;
			document.getElementById('Modal.Preco').innerHTML = produto.preco;
			document.getElementById('Modal.Descricao').innerHTML = produto.descricao;
			
			var dots = document.querySelector('.slick3-dots');
			for (let i = 0; i < 3; i++) {
				if (i < produto.fotos.length) {
					document.getElementById(`Modal.Imagem${i+1}-src`).src = produto.fotos[i];
					document.getElementById(`Modal.Imagem${i+1}-link`).href = produto.fotos[i];
					dots.childNodes[i].classList.remove('d-none');
					dots.childNodes[i].childNodes[0].src = produto.fotos[i];
				} else {
					dots.childNodes[i].classList.add('d-none');
				}
			}

			let tamanhos = document.getElementById('Modal.Tamanhos');
			tamanhos.innerHTML = '<option>Escolha uma opção</option>';
			$.each(produto.tamanhos, function(index, value) {
				tamanhos.innerHTML += `<option>${value}</option>`;
			});
			let cores = document.getElementById('Modal.Cores');
			cores.innerHTML = '<option>Escolha uma opção</option>';
			$.each(produto.cores, function(index, value) {
				cores.innerHTML += `<option>${value}</option>`;
			});
			
			document.getElementById('modalProduto').classList.add('show-modal1');
		}
	</script>
}